			height 300px
			img
				height 180%
		&__carousel-title
			font-size 42px
			line-height 50px
		&__posts
			margin 32px auto 0
		&__title
			h2
				font-size 42px
				line-height 50px
			&--lite
				margin-bottom 32px
		&__title-btn
			margin-bottom 32px
			h2
				font-size 36px
				line-height 50px
			&--tablet
				justify-content space-between
				a
					display flex
		&__btn
			&--tablet
				display none
