$white = #fff
$black = #000

$mainclr = #0000FF

$darkbg = #1F1F1F
$darkborder = #484848
$fclr = #606060

$tc0 = #1D1E20
$tc1 = #1F1D1D
$tc2 = #3F3B3C
$tc3 = #554F4F

$red = #FF0000

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap')

/*==============================
	Common styles
==============================*/
body
	font-family 'Inter'
	background-color $white
	font-weight 400
	font-style normal

button
	padding 0
	border none
	background-color transparent
	transition .4s ease
	transition-property color, background, background-color, border-color, box-shadow, opacity
	cursor pointer
	&:focus
		outline none

a
	text-decoration none
	transition .4s ease
	transition-property color, background, background-color, border-color, box-shadow, opacity
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none

input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	transition .4s ease
	transition-property color, border-color, box-shadow
	&:focus
		outline none

select::-ms-expand
	display none

input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
	-webkit-appearance none
	margin 0

ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $mainclr
	color $white
	text-shadow none
::selection
	background $mainclr
	color $white
	text-shadow none

::-webkit-input-placeholder
	color $tc3
	opacity 1
::-moz-placeholder
	color $tc3
	opacity 1
:-moz-placeholder
	color $tc3
	opacity 1
:-ms-input-placeholder
	color $tc3
	opacity 1

:focus
	outline 0 !important

:focus-visible
	outline 0 !important

@media (min-width: 1400px)
	.container
	.container-lg
	.container-md
	.container-sm
	.container-xl
	.container-xxl
		max-width 1170px

.row--relative
	position relative

.collapse
	width 100%
	height 0
	overflow hidden
	transition height 0.35s ease
	&.show
		height auto

/*==============================
	Header
==============================*/
.header
	position sticky
	top 0
	left 0
	background-color $white
	z-index 99
	padding 0 16px
	&__content
		display flex
		flex-direction column
		justify-content flex-start
		align-items center
		width 100%
		max-width 1392px
		margin 0 auto
		padding 16px 0
	&__line
		display flex
		flex-direction row
		justify-content center
		align-items center
		position relative
		width 100%
		height 40px
		border-radius 12px
		background-color #202124
		margin-bottom 16px
		transition .4s ease
		transition-property transform, height, margin-bottom
		&.hidden
			height 0
			transform scale(0)
			margin-bottom 0
	&__news
		display flex
		flex-direction row
		justify-content center
		align-items center
		width auto
		p
			font-size 14px
			line-height 24px
			font-weight 600
			color #EDEFF3
			margin-bottom 0
			margin-right 12px
			&:last-child
				margin-bottom 0
		a
			font-size 12px
			line-height 24px
			color #EDEFF3
			text-decoration underline
			&:hover
				text-decoration none
	&__line-close
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 20px
		height 20px
		position absolute
		right 16px
		top 50%
		transform translateY(-50%)
		svg
			width 20px
			height 20px
			stroke #E4E7EC
			transition stroke .4s ease
		&:hover
			svg
				stroke $red
	&__main
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		width 100%
		height 40px
	&__logo
		img
			width 112px
			height auto
	&__nav
		display none
	&__start
		display none
	&__btn
		position relative
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-end
		width 28px
		height 19px
		span
			display block
			position absolute
			width 28px
			height 3px
			background-color $black
			top 0
			transition .4s ease
			&:nth-child(2)
				top 8px
				width 21px
			&:nth-child(3)
				top 16px
				width 14px
		&.active
			span
				&:first-child
					transform rotate(-45deg)
					top 8px
				&:nth-child(2)
					opacity 0
					width 0
				&:nth-child(3)
					width 28px
					transform rotate(45deg)
					top 8px
	@media (min-width: 768px)
		padding 0 24px
		&__line-close
			right 24px
	@media (min-width: 1200px)
		&__btn
			display none
		&__nav
			display block
			margin-right auto
			margin-left 50px
			.menu
				display flex
				flex-direction row
				justify-content flex-start
				align-items center
				width auto
			.menu-item
				position relative
				margin-right 32px
				&:last-child
					margin-right 0
				a
					display flex
					flex-direction column
					justify-content flex-start
					align-items flex-start
					position relative
					width auto
					font-size 16px
					line-height 24px
					height 24px
					font-weight 500
					color $tc1
					white-space nowrap
					overflow hidden
					span
						transition transform .4s ease
						line-height 24px
						color $tc1
						will-change transform
						&.hover-text-copy
							color $tc2
					&:hover
						.hover-text
							transform translateY(-100%)
						.hover-text-copy
							transform translateY(-100%)
			.menu-item-has-children
				position relative
				a
					&:first-child
						padding-right 26px
				&:hover
					.sub-menu
						opacity 1
						visibility visible
			.menu-item-has-children > a:after
				content ''
				display block
				width 18px
				height 18px
				background url('../img/drop.svg') no-repeat center
				background-size 18px 18px
				margin-left 8px
				position absolute
				right 0
				top 50%
				transform translateY(-50%)
			.sub-menu
				display grid
				grid-template-columns repeat(3, 1fr)
				gap 20px
				position absolute
				list-style none
				padding 30px
				margin 0
				background $white
				top 100%
				left 0
				z-index 10
				border 1px solid #C2C2C2
				border-radius 8px
				opacity 0
				visibility hidden
				transition opacity .4s ease, visibility .4s ease
				a
					padding-right 0 !important
				.menu-item
					margin-right 0
		&__start
			display flex
			flex-direction row
			justify-content center
			align-items center
			width 268px
			height 40px
			border 1px solid #505967
			background-color $mainclr
			border-radius 12px
			span
				font-size 16px
				font-weight 500
				color $white
				margin-right 8px
				&:last-child
					margin-right 0
			svg
				width 24px
				height 24px
				fill $white
			&:hover
				background-color $black

/*==============================
	Sidebar
==============================*/
.sidebar
	position fixed
	display flex
	flex-direction column
	justify-content center
	align-items center
	top 128px
	left 0
	bottom 0
	background-color $white
	z-index 98
	width 100vw
	transform translate3d(100vw, 0, 0)
	transition transform .4s ease
	padding 50px 16px 100px
	&__nav
		margin-bottom 100px
		.menu
			display flex
			flex-direction column
			justify-content flex-start
			align-items center
			width auto
			height auto
		.menu-item
			position relative
			display flex
			flex-direction column
			justify-content flex-start
			align-items center
			width auto
			margin-bottom 24px
			.arrow-toggle
				position absolute
				z-index 2
				width 18px
				height 24px
				right 0
				top 0
			&:last-child
				margin-bottom 0
			a
				display flex
				flex-direction column
				justify-content flex-start
				align-items flex-start
				position relative
				width auto
				font-size 24px
				line-height 24px
				height 24px
				font-weight 500
				color $tc1
				white-space nowrap
		.menu-item-has-children > a:after
			content ''
			display block
			width 18px
			height 18px
			background url('../img/drop.svg') no-repeat center
			background-size 18px 18px
			margin-left 8px
			position absolute
			right 0
			top 50%
			transform translateY(-50%)
		.menu-item-has-children
			position relative
			width auto
			a
				&:first-child
					padding-right 26px
			&.active
				.sub-menu
					height auto
					border-color #C2C2C2
					margin-top 16px
					padding 20px
		.sub-menu
			display grid
			grid-template-columns repeat(2, 1fr)
			gap 20px
			list-style none
			padding 0 20px
			margin 0
			background $white
			border 1px solid transparent
			border-radius 8px
			height 0
			overflow hidden
			transition height .4s ease, border-color .4s ease, margin-top .4s ease, padding .4s ease
			.menu-item
				margin-bottom 0
				align-items flex-start
				a
					font-size 18px
					padding-right 0 !important
	&__start
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 100%
		max-width calc(100% - 32px)
		height 50px
		border 1px solid #505967
		background-color $mainclr
		border-radius 12px
		position absolute
		bottom 50px
		left 50%
		transform translateX(-50%)
		span
			font-size 16px
			font-weight 500
			color $white
			margin-right 8px
			&:last-child
				margin-right 0
		svg
			width 24px
			height 24px
			fill $white
		&:hover
			background-color $black
	&--active
		transform translate3d(0, 0, 0)
	@media (min-width: 576px)
		&__start
			max-width 360px
	@media (min-width: 1200px)
		display none

/*==============================
	Head
==============================*/
.head
	position relative
	width 100%
	padding 30px 4px 0
	&__content
		display flex
		flex-direction column
		justify-content flex-start
		align-items center
		width 100%
		&--center
			.head__title
				font-size 48px
				line-height 56px
				font-weight 700
				letter-spacing -1px
	&__title
		font-size 32px
		line-height 40px
		font-weight 600
		color $tc0
		text-align center
		margin-bottom 24px
		&:last-child
			margin-bottom 0
	&__text
		font-size 16px
		line-height 24px
		font-weight 400
		color $tc2
		text-align center
		margin-bottom 24px
		&:last-child
			margin-bottom 0
	&__link
		display flex
		flex-direction row
		justify-content center
		align-items center
		width auto
		height 50px
		padding 0 20px
		border-radius 12px
		font-size 16px
		line-height 24px
		font-weight 500
		background-color #202124
		color $white
		border 1px solid #1E3D9C
		svg
			margin-left 8px
		&:hover
			background-color $mainclr
	@media (min-width: 768px)
		padding 40px 4px 0
		&__content
			&--center
				.head__title
					font-size 56px
					line-height 64px
					letter-spacing -2px
		&__title
			font-size 42px
			line-height 56px
	@media (min-width: 992px)
		&__content
			&--center
				.head__text
					padding 0 100px
	@media (min-width: 1200px)
		padding 50px 4px 0
		&__content
			align-items flex-start
			&--center
				align-items center
				.head__title
					font-size 90px
					line-height 90%
					text-align center
				.head__text
					text-align center
					padding 0 200px
		&__title
			font-size 64px
			line-height 72px
			letter-spacing -4px
			text-align left
			margin-bottom 40px
			&:last-child
				margin-bottom 0
		&__text
			margin-bottom 32px
			text-align left
			&:last-child
				margin-bottom 0

/*==============================
	Breadcrumb
==============================*/
.breadcrumb
	padding 0
	list-style none
	display flex
	flex-direction row
	justify-content flex-start
	align-items flex-start
	flex-wrap wrap
	width auto
	max-width 100%
	margin-bottom 24px
	.breadcrumb-item
		position relative
		padding-left 16px
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		&:before
			content ''
			position absolute
			display block
			top 0
			left 0
			width 16px
			height 24px
			background url('../img/breadcrumb.svg') no-repeat center
			background-size 12px 12px
		&:first-child
			padding-left 0
			&:before
				display none
		a
		span
			font-size 14px
			line-height 24px
			text-transform uppercase
		a
			color $tc3
			&:hover
				color $mainclr
		span
			color #888484
	@media (min-width: 1200px)
		margin-bottom 16px

/*==============================
	Section
==============================*/
.section
	position relative
	width 100%
	padding 60px 4px 0
	&__parallax
		position relative
		overflow hidden
		border-radius 16px
		height 200px
		width 100%
		max-width 1392px
		margin 0 auto
		background-color $darkbg
		img
			position absolute
			top 0
			left 50%
			transform translateX(-50%)
			width auto
			height 200%
			will-change transform
	&__paginations
		display flex
		flex-direction row
		justify-content center
		align-items flex-start
		width 100%
		margin-top 24px
	&__carousel-title
		font-size 32px
		line-height 40px
		font-weight 600
		color $tc0
		margin 0 auto
		display block
		width 100%
		max-width 1392px
	&__posts
		position relative
		width 100%
		max-width 1392px
		margin 24px auto 0
	&__title
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		width 100%
		h2
			font-size 32px
			line-height 40px
			font-weight 700
			color $tc0
			margin-bottom 16px
			&:last-child
				margin-bottom 0
		p
			font-size 16px
			line-height 24px
			font-weight 400
			color $tc2
			margin-bottom 16px
			&:last-child
				margin-bottom 0
		&--lite
			margin-bottom 24px
			h2
				font-weight 400
	&__title-btn
		display flex
		flex-direction row
		justify-content space-between
		align-items flex-end
		width 100%
		margin-bottom 24px
		h2
			font-size 32px
			line-height 50px
			font-weight 400
			color $tc0
			margin-bottom 0
			max-width calc(100% - 160px)
		a
			display flex
			flex-direction row
			justify-content center
			align-items center
			width 140px
			height 50px
			background-color $mainclr
			border 1px solid #626262
			border-radius 12px
			color $white
			font-size 16px
			font-weight 500
			&:hover
				background-color $black
		&--tablet
			justify-content center
			h2
				max-width 100%
			a
				display none
	&__support-wrap
		position relative
		width 100%
	&__support
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		width 100%
		position relative
		margin-top 40px
		h6
			font-size 18px
			font-weight 700
			color $tc2
			margin-bottom 16px
		p
			font-size 16px
			line-height 24px
			font-weight 400
			color $tc2
			margin-bottom 0
			a
				color $tc2
				font-weight 700
				text-decoration underline
				&:hover
					text-decoration none
	&__btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 140px
		height 50px
		background-color $mainclr
		border 1px solid #626262
		border-radius 12px
		color $white
		font-size 16px
		font-weight 500
		margin 0 auto
		&:hover
			background-color $black
