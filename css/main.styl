	&__title
		display block
		width 100%
		font-size 24px
		line-height 32px
		color $tc1
		margin-top 16px
		letter-spacing -1px
		margin-bottom 16px
		sup
			color $red
			top -4px
	&__check
		position relative
		margin-bottom 16px
		overflow hidden
		input
			&:not(:checked)
			&:checked
				position absolute
				left -9999px
			&:not(:checked) + label
			&:checked + label
				display flex
				flex-direction row
				justify-content flex-start
				align-items center
				width 100%
				position relative
				font-size 16px
				line-height 24px
				min-height 24px
				color $tc2
				font-weight normal
				cursor pointer
				padding-left 24px
				margin 0
				span
					color $tc3
					margin-left 8px
			&:not(:checked) + label:before
			&:checked + label:before
				content ''
				position absolute
				left 0
				top 4px
				width 16px
				height 16px
				border 1px solid $tc3
				background-color transparent
				border-radius 4px
			&:not(:checked) + label:after
			&:checked + label:after
				content ''
				position absolute
				left 0
				top 4px
				width 16px
				height 16px
				transition .4s ease
