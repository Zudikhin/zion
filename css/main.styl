		&__support-wrap
			height 0
		&__support
			margin-top 0
			position absolute
			transform translateY(-100%)
	@media (min-width: 1200px)
		padding 100px 4px 0
		&__paginations
			justify-content flex-end
			&--center
				justify-content center
		&__parallax
			height 350px
			img
				width 100%
				height auto
		&__carousel-title
			font-size 50px
			line-height 60px
		&__posts
			margin 40px auto 0
		&__title
			h2
				font-size 50px
				line-height 60px
			&--lite
				margin-bottom 40px
		&__title-btn
			margin-bottom 40px
			h2
				font-size 40px
	@media (min-width: 1400px)
		&__parallax
			height 400px

/*==============================
	Sorting
==============================*/
.sorting
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	width 100%
	margin-bottom 48px
	&__group
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		position relative
		width 100%
		margin-bottom 24px
		&--search
			.sorting__input
				padding 0 40px 0 16px
	&__label
		font-size 14px
		line-height 24px
		font-weight 400
		color $tc3
		margin-bottom 8px
	&__select
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		width 100%
		height 46px
		padding 0 16px
		border-radius 4px
		border 1px solid #F0EEEE
		background $white
		&:focus
			box-shadow none
		.ss-single
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			height 44px
			padding 0
			margin 0 !important
			color $tc3
			font-size 14px
			text-transform uppercase
		.ss-arrow
			width 10px
			height 10px
			margin 2px 0 0 8px
			path
				stroke $tc1
				stroke-width 12
		.ss-list
			width 100%
			.ss-option
				font-size 14px
				color $tc3
				line-height 32px
				text-transform uppercase
				padding 0
				transition .4s ease
				&:hover
					background-color transparent
					color $mainclr
				&.ss-selected
					background-color transparent !important
					color $mainclr !important
		&.ss-content
			flex-direction column
			align-items flex-start
			border-radius 8px
			width 100%
			height auto
			padding 15px 16px
			border 1px solid #F0EEEE
			background $white
			box-shadow none
		&.ss-open-below
			border-radius 8px !important
	&__input
		width 100%
		height 46px
		padding 0 16px
		border-radius 4px
		border 1px solid #F0EEEE
		background $white
		color $tc3
		font-size 14px
		text-transform uppercase
	&__clear
		display flex
		flex-direction column
		justify-content row
		align-items row
		position absolute
		top 50%
		right 16px
		width 16px
		height 16px
		transform translateY(-50%)
		z-index 1
		pointer-events none
		opacity 0
		transition opacity .4s ease
		svg
			width 16px
			height 16px
			fill $tc2
			transition fill .4s ease
		&:hover
			svg
				fill $red
		&.active
			opacity 1
			pointer-events auto
	&__btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 120px
		height 46px
		background-color $mainclr
		font-size 16px
		font-weight 500
		color $white
		border-radius 8px
		flex-shrink 0
		&:hover
			background-color $black
	&__wrap
		display flex
		flex-direction row
		justify-content space-between
		align-items flex-start
		width 100%
		.sorting__group
			max-width 300px
			margin-bottom 0
	&__results
		font-size 14px
		color $tc2
		line-height 46px
		flex-shrink 0
		margin-right 24px
	&--blog
		flex-direction row
		flex-wrap wrap
		.sorting__group--search
			width calc(100% - 144px)
			max-width 100%
			margin-right 24px
	@media (min-width: 768px)
		flex-direction row
		align-items flex-end
		&__group
			margin-bottom 0
			margin-right 24px
			width calc((100% - 192px)/3)
		&__wrap
			margin-top 16px
			.sorting__group
				margin-right 0
				width 300px

/*==============================
	Sortbar
==============================*/
.sortbar
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	width 100%
	position relative
	margin-bottom 48px
	&__wrap
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		width 100%
		position relative
	&__applied
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
